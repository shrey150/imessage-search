{
  "name": "imessage-mcp",
  "version": "1.0.0",
  "description": "MCP server for semantic search over iMessage history",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "start": "node dist/index.js",
    "index": "tsx src/scripts/index.ts",
    "index:full": "tsx src/scripts/index.ts --full",
    "index:status": "tsx src/scripts/status.ts",
    "index:verify": "tsx src/scripts/verify.ts",
    "query": "tsx src/scripts/search.ts",
    "dashboard": "cd dashboard && poetry run streamlit run app.py --server.runOnSave=true",
    "dashboard:setup": "cd dashboard && poetry install",
    "qdrant:start": "./scripts/qdrant-start.sh",
    "qdrant:stop": "./scripts/qdrant-stop.sh",
    "qdrant:reset": "./scripts/qdrant-reset.sh",
    "setup": "pnpm install && ./scripts/setup.sh"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@qdrant/js-client-rest": "^1.7.0",
    "better-sqlite3": "^11.6.0",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "openai": "^4.20.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
